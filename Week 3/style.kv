#:kivy 2.1.0
#:import Factory kivy.factory.Factory

BoxLayout:
    orientation: "horizontal"

    # Левая панель навигации
    BoxLayout:
        orientation: "vertical"
        size_hint: 0.3, 1
        padding: 30
        spacing: 20

        # changing color
        canvas.before:
            Color:
                rgba: 0.96, 0.96, 0.75, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Button:
            text: "Library"
            on_release: app.root.ids.screen_manager.current = "library"
            size_hint: 1, 0.2
            color: 0, 0, 0, 1
            background_color: 0.96, 0.96, 0.86, 1

        Button:
            text: "Add Book"
            on_release: app.root.ids.screen_manager.current = "add"
            size_hint: 1, 0.2
            color: 0, 0, 0, 1
            background_color: 0.96, 0.96, 0.86, 1

        Button:
            text: "Settings"
            on_release: app.root.ids.screen_manager.current = "settings"
            size_hint: 1, 0.2
            color: 0, 0, 0, 1
            background_color: 0.96, 0.96, 0.86, 1

        Label:
            text: ""

    ScreenManager:
        id: screen_manager

        LibraryScreen:
            name: "library"

        AddScreen:
            name: "add"

        SettingsScreen:
            name: "settings"


<SetPopup@Popup>
    auto_dismiss: False # on False you can't qute by touch
    title: "Additional settings"
    size_hint: 0.6, 0.7
    pos_hint: {"top": 0.9}



    BoxLayout:
        orientation: "vertical"

        # Author
        Label:
            text: "Choose an author"
        TextInput:
            id: author
            text: "ALL"
            multiline: False

        # Genre
        Label:
            text: "Choose a genre"
        TextInput:
            id: genre
            text: "ALL"
            multiline: False

        # Range of years
        Label:
            text: "Choose range of years"
        BoxLayout:
            orientation: "horizontal"

            Label:
                text: "from"
            TextInput:
                id: year_from
                text: "1900"
                multiline: False

            Label:
                text: "to"
            TextInput:
                id: year_to
                text: "2025"
                multiline: False

        BoxLayout:
            orientation: "horizontal"

            Button:
                text: "Confirm"
                on_release: root.set_values()

            Button:
                text: "Reset"
                on_release: root.reset_quiry()

            Button:
                text: "Close"
                on_release: root.dismiss()


<LibraryScreen>:
    FloatLayout:
        # changing color
        canvas.before:
            Color:
                rgba: 0.96, 0.96, 0.80, 1
            Rectangle:
                size: self.size
                pos: self.pos

        # Top BoxLayout (Search Bar)
        BoxLayout:
            padding: 10
            spacing: 20
            orientation: "horizontal"
            size_hint: 1, None
            height: "50dp"
            pos_hint: {"top": 1}

            TextInput:
                id: search_quiry
                multiline: False
                size_hint: 0.5, 1  # Half width of the BoxLayout

            Button:
                text: "Search"
                size_hint: 0.25, 1  # Quarter width of the BoxLayout
                color: 0, 0, 0, 1
                background_color: 0.96, 0.96, 0.65, 1
                on_release: root.search_book()

        # Content Label (below the search bar)
        Label:
            text: "Books:"
            size_hint: 1, None  # Full width, fixed height
            height: "30dp"
            pos_hint: {"top": 0.9}  # Position just below the search bar
            color: 0, 0, 0, 1

        # Scrollable Content Area
        ScrollView:
            size_hint: 1, 0.8  # Take up most of the remaining screen
            pos_hint: {"top": 0.85}  # Position below the label

            Label:
                id: scroll
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text: "Empty"
                color: 0, 0, 0, 1

<AddScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Библиотека контента"
            font_size: 20


<SettingsScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Настройки приложения"
            font_size: 20
