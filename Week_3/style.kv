            font_size: 26
            bold: True
            color: 0, 0, 0, 1
            size_hint_y: None
            height: "60dp"

        BoxLayout:
            orientation: "vertical"
            spacing: 10

            BoxLayout:
                size_hint_y: None
                height: "40dp"

                Label:
                    text: "Book Title:"
                    color: 0, 0, 0, 1
                    size_hint_x: 0.3

                TextInput:
                    id: book_title
                    multiline: False
                    size_hint_x: 0.7

            BoxLayout:
                size_hint_y: None
                height: "40dp"

                Label:
                    text: "Author:"
                    color: 0, 0, 0, 1
                    size_hint_x: 0.3

                TextInput:
                    id: book_author
                    multiline: False
                    size_hint_x: 0.7

            BoxLayout:
                size_hint_y: None
                height: "40dp"

                Label:
                    text: "Genre:"
                    color: 0, 0, 0, 1
                    size_hint_x: 0.3

                TextInput:
                    id: book_genre
                    multiline: False
                    size_hint_x: 0.7

            BoxLayout:
                size_hint_y: None
                height: "40dp"

                Label:
                    text: "Year:"
                    color: 0, 0, 0, 1
                    size_hint_x: 0.3

                TextInput:
                    id: book_year
                    multiline: False
                    size_hint_x: 0.7

            BoxLayout:
                size_hint_y: None
                height: "40dp"

                Label:
                    text: "Pages:"
                    color: 0, 0, 0, 1
                    size_hint_x: 0.3

                TextInput:
                    id: book_pages
                    multiline: False
                    size_hint_x: 0.7

        Label:
            text: "Book Description:"
            color: 0, 0, 0, 1
            size_hint_y: None
            height: "40dp"

        TextInput:
            id: book_description
            size_hint_y: None
            height: "120dp"

        Button:
            text: "Add Book"
            font_size: 18
            bold: True
            size_hint_y: None
            height: "60dp"
            color: 0, 0, 0, 1
            background_color: 0.96, 0.85, 0.40, 1  # Warm gold button color
            background_normal: ""  # Removes default texture
            border: (10, 10, 10, 10)  # Soft rounded corners
            on_release: root.insert_book()


<DeleteScreen>
