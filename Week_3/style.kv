#:kivy 2.1.0
#:import Factory kivy.factory.Factory

BoxLayout:
    orientation: "horizontal"

    # Left navigation panel
    BoxLayout:
        orientation: "vertical"
        size_hint: 0.3, 1
        padding: 30
        spacing: 20

        # changing color
        canvas.before:
            Color:
                rgba: 0.96, 0.96, 0.65, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Button:
            text: "Library"
            font_size: 18
            bold: True
            color: 0, 0, 0, 1
            background_color: 0.96, 0.85, 0.40, 1  # Warm gold button color
            background_normal: ""  # Removes default texture
            border: (10, 10, 10, 10)
            on_release: app.root.ids.screen_manager.current = "library"
            size_hint: 1, 0.2

        Button:
            text: "Add Book"
            font_size: 18
            bold: True
            color: 0, 0, 0, 1
            background_color: 0.96, 0.85, 0.40, 1  # Warm gold button color
            background_normal: ""  # Removes default texture
            border: (10, 10, 10, 10)
            on_release: app.root.ids.screen_manager.current = "add"
            size_hint: 1, 0.2

        Button:
            text: "Delete"
            font_size: 18
            bold: True
            color: 0, 0, 0, 1
            background_color: 0.96, 0.85, 0.40, 1  # Warm gold button color
            background_normal: ""  # Removes default texture
            border: (10, 10, 10, 10)
            on_release: app.root.ids.screen_manager.current = "delete"
            size_hint: 1, 0.2

        Button:
            text: "Settings"
            font_size: 18
            bold: True
            color: 0, 0, 0, 1
            background_color: 0.96, 0.85, 0.40, 1  # Warm gold button color
            background_normal: ""  # Removes default texture
            border: (10, 10, 10, 10)
            on_release: app.root.ids.screen_manager.current = "settings"
            size_hint: 1, 0.2


        Label:
            text: ""

    ScreenManager:
        id: screen_manager

        LibraryScreen:
            name: "library"

        AddScreen:
            name: "add"

        DeleteScreen:
            name: "delete"

        SettingsScreen:
            name: "settings"


<SetPopup@Popup>
    auto_dismiss: False # on False you can't qute by touch
    title: "Additional settings"
    size_hint: 0.6, 0.7
    pos_hint: {"top": 0.9}
    background: ''  # Remove default background
    background_color: 0.96, 0.96, 0.80, 1

    BoxLayout:
        padding: 10
        spacing: 20
        orientation: "vertical"

        # Author
        Label:
            text: "Choose an author"
            color: 0, 0, 0, 1
        TextInput:
            id: author
            text: "ALL"
            multiline: False

        # Genre
        Label:
            text: "Choose a genre"
            color: 0, 0, 0, 1
        TextInput:
            id: genre
            text: "ALL"
            multiline: False

        # Range of years
        Label:
            text: "Choose range of years"
            color: 0, 0, 0, 1
        BoxLayout:
            orientation: "horizontal"

            Label:
                text: "from"
                color: 0, 0, 0, 1
            TextInput:
                id: year_from
                text: "1900"
                multiline: False

            Label:
                text: "to"
                color: 0, 0, 0, 1
            TextInput:
                id: year_to
                text: "2025"
                multiline: False

        BoxLayout:
            orientation: "horizontal"

            Button:
                text: "Confirm"
                font_size: 18
                bold: True
                color: 0, 0, 0, 1
                background_color: 0.96, 0.85, 0.40, 1  # Warm gold button color
                background_normal: ""  # Removes default texture
                border: (10, 10, 10, 10)
                on_release: root.set_values()

            Button:
                text: "Reset"
                font_size: 18
                bold: True
                color: 0, 0, 0, 1
                background_color: 0.96, 0.85, 0.40, 1  # Warm gold button color
                background_normal: ""  # Removes default texture
                border: (10, 10, 10, 10)
                on_release: root.reset_query()

            Button:
                text: "Close"
                font_size: 18
                bold: True
                color: 0, 0, 0, 1
                background_color: 0.96, 0.85, 0.40, 1  # Warm gold button color
                background_normal: ""  # Removes default texture
                border: (10, 10, 10, 10)
                on_release: root.dismiss()


<LibraryScreen>:
    FloatLayout:
        # changing color
        canvas.before:
            Color:
                rgba: 0.96, 0.96, 0.75, 1
            Rectangle:
                size: self.size
                pos: self.pos

        padding: 10
        spacing: 20

        # Top BoxLayout (Search Bar)
        BoxLayout:
            padding: 10
            spacing: 20
            orientation: "horizontal"
            size_hint: 1, None
            height: "50dp"
            pos_hint: {"top": 1}

            TextInput:
                id: search_quiry
                multiline: False
                size_hint: 0.5, 1  # Half width of the BoxLayout

            Button:
                text: "Search"
                font_size: 18
                bold: True
                color: 0, 0, 0, 1
                background_color: 0.96, 0.85, 0.40, 1
                background_normal: ""
                border: (10, 10, 10, 10)
                size_hint: 0.25, 1
                on_release: root.search_book()

        # Content Label (below the search bar)
        Label:
            text: "Books:"
            size_hint: 0.1, None  # Full width, fixed height
            font_size: 24
            height: "30dp"
            pos_hint: {"top": 0.85}  # Position just below the search bar
            color: 0, 0, 0, 1

        Button:
            id: sort_by
            text: "Sort by: None"
            font_size: 18
            bold: True
            color: 0, 0, 0, 1
            background_color: 0.96, 0.85, 0.40, 1  # Warm gold button color
            background_normal: ""  # Removes default texture
            border: (10, 10, 10, 10)
            size_hint: 0.2, None  # Full width, fixed height
            height: "30dp"
            pos_hint: {"top": 0.9}  # Position just below the search bar
            color: 0, 0, 0, 1
            on_release: root.sort_by()

        # Scrollable Content Area
        ScrollView:
            size_hint: 1, 0.8  # Take up most of the remaining screen
            pos_hint: {"left": 0.80}  # Position below the label

            Label:
                id: scroll
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text: "Not Found"
                color: 0, 0, 0, 1
<AddScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 30
        spacing: 20

        canvas.before:
            Color:
                rgba: 0.96, 0.96, 0.80, 1  # Light beige background
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
